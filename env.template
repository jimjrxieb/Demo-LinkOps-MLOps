# LinkOps MLOps Platform Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=linkops_secure_password_2024

# API Keys (Optional - use dummy values for local development)
OPENAI_API_KEY=your_openai_api_key_here
GITGUARDIAN_API_KEY=your_gitguardian_api_key_here
SNYK_TOKEN=your_snyk_token_here

# Cloud Provider Credentials (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key  
AWS_DEFAULT_REGION=us-east-1

# Azure Credentials (Optional)
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Development Settings
NODE_ENV=development
PYTHON_ENV=development
LOG_LEVEL=info

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000

# Service Discovery (automatically set by Docker Compose)
DATABASE_URL=postgresql://linkops:${POSTGRES_PASSWORD}@db:5432/linkops
REDIS_URL=redis://redis:6379
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Security Settings
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_AUDIT_SCANNING=true
ENABLE_AUTO_ENHANCEMENT=true
ENABLE_REAL_TIME_PROCESSING=true

# MLOps Configuration
MODEL_STORAGE_PATH=/app/models
DATA_LAKE_PATH=/app/data_lake
ARTIFACT_STORAGE=local

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# Container Registry (Optional)
DOCKER_REGISTRY=your_registry_url
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_password 