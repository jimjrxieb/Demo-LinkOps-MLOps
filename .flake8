[flake8]
max-line-length = 88

# These are ignored for compatibility with black and AI generation
extend-ignore = 
    E203  
    W503  
    E501
    F841
    F402
    F541
    F401        

exclude = 
    .git
    __pycache__
    .venv
    venv
    node_modules
    .pytest_cache
    .mypy_cache

per-file-ignores =
    __init__.py:F401
