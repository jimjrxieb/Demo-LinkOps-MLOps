# LinkOps Core Environment Variables
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME=LinkOps Core
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql://linkops:secure_db_password_2024@localhost:5432/linkops
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# PostgreSQL Credentials (for Docker)
POSTGRES_PASSWORD=secure_db_password_2024
POSTGRES_USER=linkops
POSTGRES_DB=linkops

# pgAdmin Credentials (for Docker)
PGADMIN_DEFAULT_EMAIL=admin@linkops.com
PGADMIN_DEFAULT_PASSWORD=secure_pgadmin_password_2024

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=linkops
KAFKA_CONSUMER_GROUP=linkops-core

# File Storage Settings
SCREENSHOTS_DIR=./screenshots
LOGS_DIR=./logs

# Security Settings (for production)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here
