# DEMO-LinkOps Environment Variables
# Copy this to .env and set your values

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=false

# Database Configuration
DATABASE_PATH=db/execution_logs.db
RAG_DATABASE_PATH=rag/chroma_db

# MCP Tools Configuration
MCP_TOOL_DIR=db/mcp_tools
EXECUTION_LOGS_DIR=db/logs

# Auto Runner Configuration
AUTO_RUNNER_INTERVAL=300
AUTO_RUNNER_TIMEOUT=30

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8000

# Security Configuration
ENABLE_SECURITY_CHECKS=true
MAX_EXECUTION_TIME=60
MAX_OUTPUT_SIZE=1048576

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=auto_runner.log

# Optional: External Services
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
EOF < /dev/null
